<div class="page-header">
  <h1>
    Cards
    <a href="/cards/new" class="btn btn-lg btn-success">New Card</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>List</th>
        <th>Image</th>
        <th>Actions</th>
      </tr>

      <% @cards.each do |card| %>
      <tr>
        <td><%= card.title %></td>
        <td><%= card.description %></td>
        <td>
          <% if card.list.present? %>
            <a href="/lists/<%= card.list.id %>">
              <%= card.list.title %>
            </a>
          <% end %>
        </td>
        <td><img src='<%= card.image %>' class='img-responsive'></td>
        <td>
          <a href="/cards/<%= card.id %>" class="btn btn-primary">Show</a>
          <a href="/cards/<%= card.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_card/<%= card.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @cards, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
